@page "/fueltypes"
@using ProksRent_WebAPI.DTOs
@using ProksRent_WebAPI.Services
@inject IFuelTypeService FuelTypeService
@inject NavigationManager NavigationManager

<PageTitle>Fuel Types</PageTitle>

@if (isLoading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <p class="text-danger">@errorMessage</p>
}
else
{
    <button class="btn btn-success mb-2" @onclick="AddFuelType">Add Fuel Type</button>
    <table class="table">
        <thead>
            <tr>
                <th @onclick="() => SortBy(nameof(FuelTypeDto.Name))">
                    Name @if (sortField == nameof(FuelTypeDto.Name)) { <span>@(sortAscending ? "↑" : "↓")</span> }
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fuel in PagedFuelTypes)
            {
                <tr>
                    <td>@fuel.Name</td>
                    <td>
                        <button class="btn btn-primary btn-sm" @onclick="() => EditFuelType(fuel.Id)">Edit</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteFuelType(fuel.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <button class="btn btn-secondary" @onclick="PreviousPage" disabled="@(!CanGoPrevious)">Previous</button>
        <span> Page @currentPage of @totalPages </span>
        <button class="btn btn-secondary" @onclick="NextPage" disabled="@(!CanGoNext)">Next</button>
    </div>
}

@code {
    private List<FuelTypeDto> fuelTypes = new();
    private string? errorMessage;
    private bool isLoading = true;

    private int currentPage = 1;
    private int pageSize = 5;

    private string sortField = nameof(FuelTypeDto.Name);
    private bool sortAscending = true;

    private IEnumerable<FuelTypeDto> PagedFuelTypes => fuelTypes
        .OrderBy(f => sortField == nameof(FuelTypeDto.Name) ? f.Name : "")
        .ThenBy(f => f.Id)
        .Skip((currentPage - 1) * pageSize)
        .Take(pageSize);

    private int totalPages => (int)Math.Ceiling((double)fuelTypes.Count / pageSize);
    private bool CanGoPrevious => currentPage > 1;
    private bool CanGoNext => currentPage < totalPages;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            fuelTypes = (await FuelTypeService.GetAllFuelTypesAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AddFuelType() => NavigationManager.NavigateTo("/edit-fueltype/0");
    private void EditFuelType(int id) => NavigationManager.NavigateTo($"/edit-fueltype/{id}");

    private async Task DeleteFuelType(int id)
    {
        try
        {
            await FuelTypeService.DeleteFuelTypeAsync(id);
            fuelTypes = (await FuelTypeService.GetAllFuelTypesAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private void NextPage() { if (CanGoNext) currentPage++; }
    private void PreviousPage() { if (CanGoPrevious) currentPage--; }

    private void SortBy(string field)
    {
        if (sortField == field)
            sortAscending = !sortAscending;
        else
        {
            sortField = field;
            sortAscending = true;
        }

        fuelTypes = sortAscending
            ? fuelTypes.OrderBy(f => f.Name).ToList()
            : fuelTypes.OrderByDescending(f => f.Name).ToList();
    }
}
